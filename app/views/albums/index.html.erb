<h1><%= @artist.name %>'s Albums</h1>

<% @albums.each do |album| %>
  <h3><%= link_to album.title, album_path(album) %></h3>
  <%= link_to 'Edit Album', edit_album_path(album), class: 'btn btn-primary' %>
  <%= link_to 'Delete', album_path(album), method: :delete, class: 'btn btn-danger' %>
<% end %>
