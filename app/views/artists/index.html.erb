<div>
  <% @artists.each do |artist| %>
    <h1><%= artist.name %></h1>
    <small><%= artist.origin %></small>
    <p><%= artist.bio %></p>

    <h3>Albums:</h3>
    <% artist.albums.each do |album| %>
      <p><%= link_to album.title, album_path(album) %></p>
    <% end %>
    <p><%= link_to 'More Albums', artist_albums_path(artist), class: 'btn btn-success' %></p>

    <%= link_to "Create Album", new_artist_album_path(artist), class: 'btn btn-primary' %>
    <%= link_to "Edit Artist", edit_artist_path(artist), class: 'btn btn-default pull-right' %>
    <%= link_to "Delete", artist_path(artist), method: :delete, class: 'btn btn-default pull-right' %>

  <% end %>

</div><br />

<%= link_to 'Create Artist', new_artist_path, class: 'btn btn-default' %>
